{{#each this}}
  <div class='d-flex align-items-center col-12 col-md-6 col-xl-4 mb-3'>
    <div class='card'>
      <img
        data-image-full={{largeImageURL}}
        class='w-100 card-img-top'
        src='{{webformatURL}}'
        alt='{{tags}}'
      />
      <div class='card-body d-flex flex-wrap justify-content-evenly'>
        <p class='d-flex align-items-center mb-0'>
          <i class='material-icons me-1'>thumb_up</i>
          {{likes}}
        </p>
        <p class='d-flex align-items-center mb-0'>
          <i class='material-icons me-1'>visibility</i>
          {{views}}
        </p>
        <p class='d-flex align-items-center mb-0'>
          <i class='material-icons me-1'>comment</i>
          {{comments}}
        </p>
        <a
          target='_blank'
          href='{{pageURL}}'
          class='text-decoration-none d-flex align-items-center mb-0'
        >
          <i class='material-icons me-1'>cloud_download</i>
          {{downloads}}
        </a>
      </div>
    </div>
  </div>
{{/each}}